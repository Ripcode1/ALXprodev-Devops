#!/bin/bash

# Task 0: API Request Automation
# Fetches Pikachu data from Pokemon API and saves to data.json

API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make API request and save response
http_code=$(curl -s -w "%{http_code}" -o "$OUTPUT_FILE" "$API_URL")

# Check if request was successful
if [ "$http_code" != "200" ]; then
    error_msg="Error: Failed to fetch data for Pikachu. HTTP Status Code: $http_code"
    echo "$error_msg" | tee -a "$ERROR_FILE"
    exit 1
fi
